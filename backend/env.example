# AI Stock Level Estimation API Configuration

# API Settings
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS Settings (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
MODEL_CACHE_DIR=model_cache

# AI Model Settings
DEFAULT_MODEL=qwen-vl
ENABLE_GPU=true
BATCH_SIZE=1

# Vision-Language Model Settings
QWEN_VL_MODEL=Qwen/Qwen-VL-Chat
PALIGEMMA_MODEL=google/paligemma-3b-pt-448
FLORENCE_MODEL=microsoft/Florence-2-base

# Segmentation Model Settings
SAM_MODEL=sam_vit_h_4b8939.pth

# Depth Estimation Settings
MIDAS_MODEL=MiDaS_small
MARIGOLD_MODEL=prs-eth/marigold-v1-0

# Stock Level Thresholds
LOW_STOCK_THRESHOLD=0.3
NORMAL_STOCK_THRESHOLD=0.7
OVERSTOCK_THRESHOLD=0.9

# API Keys (for commercial models)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
